<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="temp1input.css">
</head>
<style>
    input{
    padding: 8px;
    border-radius: 5px;
    border-color: gray;
    box-shadow: none;
    border-width: 2px;
   
}
.btn{
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.gcv{
    width:100px
}
button{
    background-color: aquamarine;
    color: white;
    width: 50px;
    padding: 10px;
    border: none;
    border-radius: 5px;
}
.personal{
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-around;
    width: 400px;
    height: 400px;

}

.pro{
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-around;
    width: 400px;
    height: 400px;
}
.data{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    height: 100vh;
}
</style>
<body>
    <form action="/store/<%=uid%>" method="post">
    <div class="data">
    <div class="personal">
        <h2>Personal information</h2>
    <input type="text" placeholder="Fullname" name="fullname" id="fullname">
    <input type="text" placeholder="Profession" name="profession" id="profession">
    <input type="text" placeholder="City" name="city" id="city">
    <input type="text" placeholder="Zipcode" name="zipcode" id="zipcode">
    <input type="text" placeholder="Phoneno" name="phoneno" id="phoneno">
    <input type="text" placeholder="Email" name="email" id="email">
    <input type="text" placeholder="image link" name="image_url" id="image_url">


</div>
     <div class="pro">
        <h2>Professional information</h2>
        <input type="text" placeholder="Objective" name="objective" id="objective">
        <input type="text" placeholder="Experience" name="experience" id="experience" >
        <input type="text" placeholder="Schoolname" name="schoolname" id="schoolname">
        <input type="text" placeholder="Schoollocation" name="schoollocation" id="schoollocation">
        <input type="text" placeholder="Skills" name="skills" id="skills">
     </div>
    </div>
    <div class="btn"><a href="temp1.html"><button class="gcv">generate CV</button></a></div>
    
    </form>

<script>
    const addemp=document.querySelector(".addemp")
    const addpi=document.querySelector(".addpi")
    const addskills=document.querySelector(".addskills")
    const addref=document.querySelector(".addref")
    const pro=document.querySelector(".pro")
    addemp.addEventListener("click",function(){
          let inp=document.createElement("input")
          pro.insertBefore(inp,addemp)
    })
    addpi.addEventListener("click",function(){
          let inp=document.createElement("input")
          pro.insertBefore(inp,addpi)
    })
    addskills.addEventListener("click",function(){
          let inp=document.createElement("input")
          pro.insertBefore(inp,addskills)
    })
    addref.addEventListener("click",function(){
          let inp=document.createElement("input")
          pro.insertBefore(inp,addref)
    })
</script>

</body>
</html>